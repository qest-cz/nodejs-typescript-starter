{
  "name": "nodejs-typescript-starter",
  "version": "0.0.1",
  "description": "Typescript starter pack for typescript/node.js development.",
  "main": "index.js",
  "repository": "https://github.com/qest-cz/nodejs-typescript-starter.git",
  "author": "Radim Štěpaník <radim.stepanik@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc && copyfiles src/**/*.yml dist/",
    "prettier:run": "prettier all --write \"src/**/*.ts\"",
    "prettier:check": "prettier all -l \"src/**/*.ts\"",
    "tslint:run": "tslint --fix -c tslint.json -p .",
    "tslint:check": "tslint -c tslint.json -p .",
    "tsc:check": "tsc --noEmit",
    "dev": "cross-env DEBUG=knex:query NODE_ENV=dev nodemon -e ts --exec \"ts-node -r dotenv/config src/index.ts dotenv_config_path=./config/.env \" | pino-pretty",
    "code:fix": "concurrently \"yarn tslint:run\" \"yarn prettier:run\"",
    "code:check": "concurrently \"yarn prettier:check\" \"yarn tslint:check\" \"yarn tsc:check\"",
    "prepare-deploy": "ts-node scripts/prepare-deploy",
    "test": "cross-env TS_NODE_PROJECT=\"tsconfig.test.json\" node -r dotenv/config ./node_modules/mocha/bin/_mocha dotenv_config_path=./config/.env.test --opts test/mocha.opts",
    "test:integration": "cross-env NODE_ENV=test:integration TS_NODE_PROJECT=\"tsconfig.test.json\" node -r dotenv/config ./node_modules/mocha/bin/_mocha dotenv_config_path=./config/.env.test --opts test/mocha.opts",
    "test:cover": "cross-env node -r dotenv/config ./node_modules/nyc/bin/nyc.js --check-coverage ./node_modules/mocha/bin/_mocha dotenv_config_path=./config/.env.test --opts test/mocha.opts",
    "start": "node -r dotenv/config dist/src/index.js dotenv_config_path=./config/.env"
  },
  "dependencies": {
    "dotenv": "^6.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/mocha": "^5.2.1",
    "@types/node": "^10.3.0",
    "chai": "^4.1.2",
    "concurrently": "^4.1.0",
    "copyfiles": "^2.1.0",
    "cross-env": "^5.1.4",
    "mocha": "^5.1.1",
    "nodemon": "^1.19.0",
    "nyc": "^14.1.1",
    "pino-pretty": "^3.2.0",
    "prettier": "^1.13.4",
    "rimraf": "^2.6.2",
    "sinon": "^5.1.0",
    "source-map-support": "^0.5.6",
    "ts-node": "^8.1.0",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.13.0",
    "tslint-eslint-rules": "^5.3.1",
    "typescript": "^3.1.6"
  },
  "nyc": {
    "per-file": true,
    "lines": 80,
    "functions": 100,
    "require": [
      "ts-node/register"
    ],
    "extension": [
      ".ts"
    ],
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "**/node_modules/**",
      "src/index.ts",
      "**/**/interfaces.ts",
      "**/**/**test.ts",
      "**/**/**test.hooks.ts",
      "src/utils/**",
      "src/init.ts",
      "src/modules/feedback/controllers/post-feedback/utils.ts"
    ],
    "all": true,
    "reporter": [
      "html",
      "text",
      "lcov"
    ],
    "report-dir": "coverage"
  }
}
